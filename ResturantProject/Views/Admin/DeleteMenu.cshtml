@model ResturantProject.Models.MenuModel
@{
    ViewBag.Title = "DeleteMenu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta charset="UTF-8">
</head>
<body>
    <h2>Are You sure want to Delete this Record?</h2><br />
    <table id="table1" style="width:20%;">
        <tr>
            <td>
                Menu ID:
            </td>
            <td>
                @Model.MID<br />
            </td>
        </tr>
        <tr>
            <td>
                Category Name:
            </td>
            <td>

                @Model.CategoryName<br />
            </td>
        </tr>
        <tr>
            <td>
                Menu Name:
            </td>
            <td>

                @Model.MenuName<br />
            </td>
        </tr>
        <tr>
            <td>
                Description:
            </td>
            <td>

                @Model.Description<br />
            </td>
        </tr>
        <tr>
            <td>
                Price:
            </td>
            <td>
                @Model.Price
            </td>
        </tr>
        <tr>
            <td>
                Enabled:
            </td>
            <td>
                @Model.Enabled
            </td>
        </tr>
        <tr>
            <td>
                Image:
            </td>
            <td>
                @if (Model.MenuImage != null)
                {
                    var base64 = Convert.ToBase64String(Model.MenuImage);
                    var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                    <img src='@imgsrc' style="max-width:100px;max-height:100px" />
                }<br /><br />
            </td>
        </tr>
        <tr>
            <td></td>
            <td></td>
        </tr>

    </table>
    <form action="~/Admin/DeleteMenu/@Model.MID" method="post">
        @Html.ActionLink("Back to List", "GetItemDetails")
        <input type="submit" value="Delete" style="background-color:navy;color:white;" class="btn-danger" />
    </form>
</body>
</html>

